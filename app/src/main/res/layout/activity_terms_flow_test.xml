<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:gravity="center_horizontal"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="#16a085"
        android:foreground="@drawable/common_click_effect"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="View1"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#86e2d5"
        android:foreground="@drawable/common_click_effect"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="View2"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/txt_default_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_gray_b3e3e5e9_bg_transparent_radius_1dp"
            android:foreground="@drawable/common_click_effect"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="20dp"
            android:text="디폴트 홍보 배너"
            android:textColor="#fa2828"
            android:textSize="30dp"
            android:textStyle="bold" />

        <com.nhn.couponad.coupon.banner.AdNetworkTargetBannerView
            android:id="@+id/target_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="@drawable/border_red_fa2828_bg_radius_1dp"
            android:visibility="gone" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#1ba39c"
        android:foreground="@drawable/common_click_effect"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="View3"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold" />

</LinearLayout>